!!!
%html
  %head
    %title LaughTrack
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body{:class => "#{controller_name} #{action_name}"}
    %header
      #brand= link_to image_tag('logo.png', :alt => 'laughtrack logo', :title => 'LaughTrack home page'), root_path

      #user_nav
        %ul
          - if user_signed_in?
            %li= link_to 'Sign Out', destroy_user_session_path
          - else
            %li= link_to 'Sign In', '/users/auth/twitter'

      #navbar
        .navbar-inner
          %ul
            %li.about= link_to 'About', :about, :class => 'about'
            - if user_signed_in?
              %li= link_to 'Shows', [:manage, :shows], :class => 'shows'
              %li= link_to 'Tweets', [:manage, :tweets], :class => 'tweets'
              %li= link_to 'Users', '#', :class => 'users'

          %form.navbar-search{:action => "/", :method => "get"}
            %input.search-query{:name => "query", :placeholder => "Search for a show", :type => "search", :value => params[:query]}

    #content.row-fluid
      %section#main
        .container
          = render 'shared/flash_messages'
          = yield

      %section.sidebar#shows
        = yield :list
