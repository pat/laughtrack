!!!
%html
  %head
    %title LaughTrack
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body.home
    %header
      #brand= link_to image_tag('logo.png', :alt => 'laughtrack logo'), root_path
      .navbar
        .navbar-inner
          .container
            %ul.nav
              %li.about= link_to 'About', :about
              - if user_signed_in?
                %li= link_to 'Dashboard', [:manage, :dashboard]
                %li= link_to 'Sign Out', destroy_user_session_path
              - else
                %li= link_to 'Sign In', '/users/auth/twitter'
            %form.navbar-search{:action => "/", :method => "get"}
              %input.search-query{:name => "query", :placeholder => "Search for a show", :type => "search", :value => params[:query]}
    #content
      = render 'shared/flash_messages'

      %section#main
        = yield

      %section#shows
        = yield :list
